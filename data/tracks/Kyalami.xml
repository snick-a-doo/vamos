<?xml version="1.0"?>

<track name="Kyalami">

  <sky>
    <sides>textures/sky_sides.png</sides>
	<top>textures/sky_top.png</top>
	<bottom>textures/sky_bottom.png</bottom>
	<smooth/>
  </sky>

  <!-- Material Properties -->

  <material name="track" type="asphalt">
	<friction>1.0</friction>
	<restitution>0.1</restitution>
	<rolling>1.0</rolling>
	<drag>0.0</drag>
	<bump-amplitude>0.01</bump-amplitude>
	<bump-wavelength>100.0</bump-wavelength>
	<texture>
	  <file>textures/track2.png</file>
	  <length>200.0</length>
	  <smooth/>
	  <mipmap/>
	</texture>
  </material>

  <material name="grass" type="grass">
	<friction>0.7</friction>
	<restitution>0.1</restitution>
	<rolling>5.0</rolling>
	<drag>50.0</drag>	
	<bump-amplitude>0.03</bump-amplitude>
	<bump-wavelength>2.0</bump-wavelength>
	<texture>
	  <file>textures/grass.png</file>
	  <width>10.0</width>
	  <length>12.0</length>
	  <smooth/>
	  <mipmap/>
	</texture>
  </material>

  <material name="gravel" type="gravel">
	<friction>0.8</friction>
	<restitution>0.0</restitution>
	<rolling>40.0</rolling>
	<drag>200.0</drag>	
	<bump-amplitude>0.05</bump-amplitude>
	<bump-wavelength>2.0</bump-wavelength>
	<texture>
	  <file>textures/gravel3.png</file>
	  <width>10.0</width>
	  <length>10.0</length>
	  <smooth/>
	  <mipmap/>
	</texture>
  </material>

  <material name="tires" type="rubber">
	<friction>1.0</friction>
	<restitution>0.8</restitution>
	<rolling>1.0</rolling>
	<drag>5.0</drag>
	<bump-amplitude>0.0</bump-amplitude>
	<bump-wavelength>1.0</bump-wavelength>
    <texture>
	  <file>textures/blue-tires.png</file>
	  <width>0.33</width>
	  <length>3.0</length>
	  <smooth/>
	  <mipmap/>
	</texture>
  </material>

  <material name="rail" type="metal">
	<friction>1.0</friction>
	<restitution>0.1</restitution>
	<rolling>1.0</rolling>
	<drag>0.0</drag>	
	<bump-amplitude>0.0</bump-amplitude>
	<bump-wavelength>1.0</bump-wavelength>
    <texture>
	  <file>textures/rail.png</file>
	  <width>0.375</width>
	  <length>10.0</length>
	  <smooth/>
	  <mipmap/>
	</texture>
  </material>

  <material name="wall" type="concrete">
	<friction>1.0</friction>
	<restitution>0.1</restitution>
	<rolling>1.0</rolling>
	<drag>0.0</drag>
	<bump-amplitude>0.0</bump-amplitude>
	<bump-wavelength>1.0</bump-wavelength>
	<texture>
	  <file>textures/wall.png</file>
	  <width>1.0</width>
	  <length>10.0</length>
	  <smooth/>
	  <mipmap/>
	</texture>
  </material>

  <material name="kerb" type="kerb">
	<friction>1.0</friction>
	<restitution>0.1</restitution>
	<rolling>1.0</rolling>
	<drag>0.0</drag>
	<bump-amplitude>0.06</bump-amplitude>
	<bump-wavelength>2.0</bump-wavelength>
	<texture>
	  <file>textures/blue-kerb.png</file>
	  <width>2.0</width>
	  <length>4.0</length>
	  <smooth/>
	  <mipmap/>
	</texture>
  </material>

  <!-- Segment Properties -->

  <segment name="straight">
    [ wall grass kerb track kerb grass rail ]
  </segment>
  <segment name="left turn">
    [ wall grass kerb track kerb gravel tires ]
  </segment>
  <segment name="right turn">
    [ tires gravel kerb track kerb grass rail ]
  </segment>
  <segment name="right paved">
    [ rail grass kerb track kerb track wall ]
  </segment>
  <segment name="left paved">
    [ rail track kerb track kerb grass wall ]
  </segment>

  <!-- The track -->

  <!-- Front Straight -->
  <road segment="right paved">
    <resolution>10.0</resolution>
    <length>750.0</length>
	<left-width>[ 0.0, 20.0 ]</left-width>
	<right-width>[ 0.0, 20.0 ]</right-width>
	<left-road-width>[ 0.0, 6.0 ]</left-road-width>
	<right-road-width>[ 0.0, 6.0 ]</right-road-width>
	<left-wall-height>1.5</left-wall-height>
	<right-wall-height>1.5</right-wall-height>
	<braking-marker>
	  <file>textures/50.png</file>
	  <distance>50.0</distance>
	  <size>[ 1.4, 0.7 ]</size>
	  <offset>[ 2.0, 0.0 ]</offset>
	  <side>left</side>
	</braking-marker>
	<braking-marker>
	  <file>textures/100.png</file>
	  <distance>100.0</distance>
	</braking-marker>
	<braking-marker>
	  <file>textures/150.png</file>
	  <distance>150.0</distance>
	</braking-marker>
	<elevation>[ 650.0, -15.0 ]</elevation>
  </road>

  <!-- Crowthorn Corner -->
  <road segment="right turn">
    <resolution>2.0</resolution>
    <length>97.0</length>
    <radius>-50.0</radius>
	<right-kerb>
	  <start>
	    <transition>
		  <length>4.0</length>
		  <width>2.1</width>
		</transition>
	  </start>
	  <end>
	    <transition>
		  <length>4.0</length>
		  <width>2.1</width>
		</transition>
	  </end>
	  <profile>[ 1.0, 0.1 ][ 2.0, 0.1 ][ 2.1, 0.0 ]</profile>
	</right-kerb>
	<elevation>[ 0.0, -12.0 ]</elevation>
  </road>

  <road segment="straight">
    <resolution>10.0</resolution>
    <length>240.0</length>
  </road>

  <!-- Barbeque Bend -->
  <road segment="right turn">
    <resolution>2.0</resolution>
    <length>70.0</length>
    <radius>-50.0</radius>
	<right-kerb>
	  <start><transition/></start>
	  <end><transition/></end>
	</right-kerb>
  </road>

  <road segment="straight">
    <resolution>10.0</resolution>
    <length>280.0</length>
	<elevation>[ 100.0, -25.0 ]</elevation>
  </road>

  <!-- Jukeskei Sweep -->
  <road segment="left turn">
    <resolution>2.0</resolution>
    <length>75.0</length>
    <radius>120.0</radius>
	<left-kerb>
	  <start>
	    <transition>
		  <length>4.0</length>
		  <width>2.1</width>
		</transition>
	  </start>
	  <end>
	    <transition>
		  <length>4.0</length>
		  <width>2.1</width>
		</transition>
	  </end>
	  <profile>[ 1.0, 0.1 ][ 2.0, 0.1 ][ 2.1, 0.0 ]</profile>
	</left-kerb>
  </road>

  <road segment="straight">
    <resolution>10.0</resolution>
    <length>420.0</length>
  </road>

  <!-- Sunset Bend -->
  <road segment="right turn">
    <resolution>2.0</resolution>
    <length>131.0</length>
    <radius>-80.0</radius>
	<right-kerb>
	  <start><transition/></start>
	  <end><transition/></end>
	</right-kerb>
	<elevation>[ 0.0, -15.0 ]</elevation>
  </road>

  <road segment="straight">
    <resolution>10.0</resolution>
    <length>320.0</length>
  </road>

  <!-- Clubhouse Bend -->
  <road segment="left turn">
    <resolution>2.0</resolution>
    <length>50.0</length>
    <radius>30.0</radius>
	<left-kerb>
	  <start><transition/></start>
	  <end><transition/></end>
	</left-kerb>
	<elevation>[ 0.0, -10.0 ]</elevation>
  </road>

  <road segment="straight">
    <resolution>10.0</resolution>
    <length>240.0</length>
	<elevation>[ 100.0, -5.0 ]</elevation>
	<elevation>[ 180.0, -5.0 ]</elevation>
	<elevation>[ 200.0, -5.0 ]</elevation>
  </road>

  <!-- The Esses -->
  <road segment="left turn">
    <resolution>2.0</resolution>
    <length>72.0</length>
    <radius>60.0</radius>
	<left-kerb>
	  <start><transition/></start>
	  <end><transition/></end>
	</left-kerb>
	<elevation>[ 0.0, -5.0 ]</elevation>
  </road>
  <road segment="straight">
    <resolution>10.0</resolution>
    <length>10.0</length>
  </road>
  <road segment="right turn">
    <resolution>2.0</resolution>
    <length>52.0</length>
    <radius>-60.0</radius>
    <bank>-5.0</bank>
	<right-kerb>
	  <start><transition/></start>
	</right-kerb>
  </road>
  <road segment="right turn">
    <resolution>2.0</resolution>
    <length>52.0</length>
    <radius>-60.0</radius>
    <bank>0.0</bank>
	<right-kerb>
	  <end><transition/></end>
	</right-kerb>
  </road>

  <road segment="straight">
    <resolution>10.0</resolution>
    <length>220.0</length>
	<elevation>[ 0.0, -15.0 ]</elevation>
  </road>

  <!-- Leeukop Bend -->
  <road segment="right turn">
    <resolution>2.0</resolution>
    <length>90.0</length>
    <radius>-66.0</radius>
    <bank>-5.0</bank>
	<right-kerb>
	  <start><transition/></start>
	</right-kerb>
  </road>
  <road segment="right turn">
    <resolution>2.0</resolution>
    <length>90.0</length>
    <radius>-66.0</radius>
    <bank>0.0</bank>
	<right-kerb>
	  <end><transition/></end>
	</right-kerb>
  </road>

  <road segment="straight">
    <resolution>10.0</resolution>
    <length>500.0</length>
	<elevation>[ 0.0, 0.0 ]</elevation>
	<elevation>[ 200.0, -5.0 ]</elevation>
  </road>

  <!-- The Kink -->
  <road segment="straight">
    <resolution>2.0</resolution>
    <length>50.0</length>
    <radius>-120.0</radius>
	<right-kerb>
	  <start><transition/></start>
	  <end><transition/></end>
	</right-kerb>
  </road>

  <road segment="straight">
    <resolution>10.0</resolution>
    <length>200.0</length>
  </road>

  <!-- Force the track to close -->
  <circuit/>

  <!-- Define the timing sectors -->
  <timing-line>10.0</timing-line>
  <timing-line>1600.0</timing-line>
  <timing-line>3000.0</timing-line>

  <!-- Adjust the total length if necessary. -->
  <track-length>4094.0</track-length>
</track>
